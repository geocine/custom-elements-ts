{
  "name": "custom-elements-ts",
  "version": "0.0.16",
  "description": "Create native Custom Elements using Typescript without using any third party libraries",
  "main": "index.js",
  "module": "custom-element.js",
  "scripts": {
    "build": "node tools/build.js",
    "start": "node tools/start.js",
    "bundle": "node tools/bundle.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --coverage.reporter=lcov",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix"
  },
  "keywords": [
    "components",
    "custom",
    "dom",
    "elements",
    "web",
    "typescript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitest/coverage-v8": "2.1.9",
    "@webcomponents/custom-elements": "1.2.2",
    "coveralls": "^3.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "event-stream": "3.3.4",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "happy-dom": "^14.12.3",
    "magic-string": "0.25.3",
    "prettier": "^3.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^4.18.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "typings": "index.d.ts",
  "contributors": [
    "Aivan Monceller",
    "Arjay Elbore",
    "Martin Llaneza"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geocine/custom-elements-ts.git"
  },
  "homepage": "https://geocine.github.io/custom-elements-ts/"
}
